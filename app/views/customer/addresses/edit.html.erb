<div class ="contaner"style="font-family: 'Noto Sans JP',serif; margin: 50px;">
  <div class="col-sm-2 ml-4">
    <h3>配送先編集</h3>
   </div>
      <%= form_with(model: @address, url: address_path, method: :patch, local: true) do |f| %>
        <div class="form-group col">
          <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-2 control-label" %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group col">
          <%= f.label "住所" , class: "col-sm-2 control-label" %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group col">
          <%= f.label :"宛名" , class: "col-sm-2 control-label" %>
          <%= f.text_field :name %>
        </div>
          <%= f.submit '変更内容を保存' ,class: "btn btn-success" %>
      <% end %>
    </div>
   </div>
 </div>