<div class="container takasa">
  <h2>新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

　<div class="field form-group col-xs-12">
    <%= f.label "名前",class: "col-sm-2 control-label mr-5"%> <%= f.label "（姓）",class: "ml-1"%><%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
    <%= f.label " （名)" %><%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field form-group col-xs-12">
    <%= f.label "フリガナ",class: "col-sm-2 control-label mr-4 text-nowrap"%><%= f.label " （セイ）",class: "ml-1"%><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
    <%= f.label "（メイ）" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
  </div>


   <div class="field form-group col-xs-9">
    <%= f.label "メールアドレス",class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

    <div class="field form-group col-xs-9">
    <%= f.label " 郵便番号（ハイフンなし）",class: "col-sm-3 control-label"%>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email"%>
  </div>


  <div class="field form-group col-xs-9">
    <%= f.label "住所" ,class: "col-sm-3 control-label"%>
    <%= f.text_field :address, autofocus: true, autocomplete: "email", class: "col-sm-8 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label  "電話番号（ハイフンなし）",class: "col-sm-3 control-label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>



  <div class="field form-group col-xs-12">
    <%= f.label :email,class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field form-group col-xs-12">
    <%= f.label :password,class: "col-sm-3 control-label" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

   <div class="field form-group col-xs-12">
    <%= f.label :password_confirmation,class: "col-sm-3 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-success btn-lg center-block" %>
  </div>
<% end %>
　<div class="col-xs-9">
    <h2>既に登録済みの方</h2>
  <%= link_to "こちら", new_session_path(resource_name) %><span>からログインしてください。</span>
  </div>
