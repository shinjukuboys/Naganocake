<div class="container" style="font-family: 'Noto Sans JP',serif; margin: 150px;">
 <h2>新着商品</h2>
   <% @items.each do |item| %>
     <div class="pic_frame">
     <%= attachment_image_tag(@item, :image,class: 'top-image', size: "200x200", fallback: "no_image.jpg" ) %><br>
     商品名<br><%= link_to item.name, item_path(item) %><br>
     価格¥<%= (item.price * 1.1).to_i %>
      </div>
    <% end %>
 </div>
  <div class= "text-center">
   <%= link_to "全ての商品を見る", items_path %>
  </div>
  </div>