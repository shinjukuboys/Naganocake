<div class="container" style="font-family: 'Noto Sans JP',serif;">
  <div class='row pb-5 pt-2'>
    <div class="col-md-10">
      <h2><%= "商品一覧 （全#{@items_all.count}件）" %></h2>
    </div>
 </div>

        <div class="col-md-9 offset-md-1">
          <div class="row">
             <% @items.each do |item| %>
            <div class="col-md-3">
              <%= link_to item_path(item) do %>
              <%=  attachment_image_tag item, :image, size: "200x150", fallback: "no_image.jpg" %>
              <% end %>
              商品名<br><%= link_to item.name, item_path(item) %><br>
              価格¥<%= (item.price * 1.1).to_i %>
            </div>
              <% end %>
          </div>



       </div>
     </div>