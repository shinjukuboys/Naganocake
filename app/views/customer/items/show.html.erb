<div class="container">
  <div class="row justify-content-md-center">
    <div>
      <br>
       <br>
        <br>
      <div class="col-md-auto">
        <%= attachment_image_tag(@item, :image, size: "340x220", fallback: "no_image.jpg" ) %>
        </div>
      </div>
      <br>
      <br>
      <div class="col col-lg-5">
       <br>
        <br>
        <br>
        <br>
        <div>
          <h4><%= @item.name %></h4><br>
          <h5><%= @item.introduction %></h5><br>
          <h5>￥<%= (@item.price * 1.1).to_i %>（税込）</h5><br>
         <%= form_with model: CartItem.new , url: cart_items_path, local: true do |f| %>
        <p><%= f.number_field :amount, min: 1, max: 100, placeholder: '個数選択', class:"col-sm-4 form-control" %></p>
           <%= f.hidden_field :item_id, :value => @item.id %></p>
        <p><%= f.submit "カートに入れる", class: "col-sm-4 btn btn-primary" %></p>
         <% end %>
         </div>