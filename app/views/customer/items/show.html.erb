<div class= container  style="font-family: 'Noto Sans JP',serif;">
  <div class="row justify-content-md-center">
    <div>
      <br>
       <br>
        <br>
      <div class="col-md-auto">
         <%=  attachment_image_tag @item, :image, size: "350x300", fallback: "no_image.jpg" %>
        </div>
      </div>
      <br>
      <br>
      <div class="col col-lg-5">
       <br>
        <br>
        <br>
        <br>
        <div>
          <h4><%= @item.name %></h4><br>
          <h5><%= @item.introduction %></h5><br>
          <h5>￥<%= (@item.price * 1.1).to_i %>（税込）</h5><br>

          <% if customer_signed_in? %>
      				<% if @item.is_active == true %>
              <%= form_with model: CartItem, url: cart_items_path,method: :post, local: true do |f| %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択", class: "col-sm-3 quantity-select-form" %><br>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.hidden_field :customer_id, :value => current_customer.id %><br>
              <%= f.submit "カートに入れる", class: "btn ", style: "background-color: #cbb05e; color: black;" %>
              <% end %>
             <% end %>
          <% end %>

