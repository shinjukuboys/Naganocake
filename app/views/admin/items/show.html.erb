<div class ="container">
  <h2>商品詳細</h2>
  <div class="row">
	  <div class="col-xs-6 mx-auto">
	      <div id="img_field">
	        <%= attachment_image_tag(@item, :image, size: "300x220", fallback: "no_image.jpg") %>
        </div>
	      <div class="field">
					<p>
						商品名　　　　　<%= @item.name %>
					</p>
	      </div><br>
	      <div class="field">
					<p>
						商品説明　　　　<%= @item.introduction %>
					</p><br>
	      </div>
	      <div class="field">
					<p>
						ジャンル　　　　<%= @item.genre.name %>
					</p><br>
	      </div>
	      <div class="field">
					<p>
						税込価格￥<%= (@item.price * 1.1).to_i %>
	        								(<%= @item.price.to_s(:delimited) %>) 円<br>
						(税抜価格)
					</p><br>
	      </div>
	      <div class="field">
					<p>
						販売ステータス
		        <% if @item.is_active == true %>
							　<i class="fas fa-bullseye red"></i>販売中
						<% elsif @item.is_active == false %>
							　<i class="fas fa-bullseye blue"></i>販売停止中
						<% end %>
					</p>
	      </div>
	      	<%= link_to "編集する", edit_admin_item_path(@item), data: {"turbolinks" => false}, class: "fas fa-pencil btn btn-success pull-right" %>
    </div>
  </div>
</div>