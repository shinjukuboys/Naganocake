
<div class ="container">
  <h2>商品編集</h2>
  <div class ="row">
    <div class="actions">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
        <div class="img_field">
          <%= f.label "商品画像", class: "col-sm-3 control-label" %>
          <%= f.attachment_field :image%>
        </div>
        <div class="form-group">
          <%= f.label :"商品名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "col-sm-9 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label "商品説明", class: "col-sm-3 control-label" %>
          <%= f.text_area :introduction, class: "col-sm-9 control-label introduction" %>
        </div>
        <div class="form-group">
          <%= f.label "ジャンル", class: "col-sm-3 control-label" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
        </div>
        <div class="form-group">
          <%= f.label "税抜価格", class: "col-sm-3 control-label" %>
          <%= f.text_field :price, class: "col-sm-3 form-control-static price" %>円
        </div>
        <div class="form-group">
          <%= f.label "販売ステータス", class: "col-sm-3 control-label" %>
          <%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --", class: "col-sm-9 is_active" %>
        </div>
        <%= f.submit "変更を保存", class: "btn btn-primary btn-lg pull-left" %>
      <% end %>

    </div>
  </div>
</div>
