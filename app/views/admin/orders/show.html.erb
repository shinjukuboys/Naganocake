<div class="contaner">
 <div class="row">
  <div style="margin-top: 50px; padding-left: 80px;">
    <h2>注文履歴詳細</h2>

    <div class="row">
     <div class="offset-md-1 col-md-auto">
      <table class="order_detail">
       <tr>
          <th>購入</th>
          <td><%=link_to @order.customer.first_name + @order.customer.last_name , admin_customer_path(@order.customer.id)%></td>
       </tr>
       <tr>
          <th>配送先</th>
          <td><%= @order.postal_code %><%= @order.address %></td>
       </tr>
       <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
       </tr>
       <tr>
          <th>注文ステータス</th>
          <td>
           <%= form_with(model: @order, url: admin_order_details_update_path, method: :patch, local: true) do |f| %>
           <%#= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
           <%= f.hidden_field :id, :value => @order.id %>
           <%= f.submit "更新",class:"btn btn-primary" %>
           <% end %>
          </td>
        </tr>
        </table>
      </div>
    </div>
 <div class="row">
 <div class="col-12">
    <table class="table table-bordered">
      <thead>
        <tr class="table-head" style="background-color:#F5F5F5;">
          <th scope="col">商品名</th>
          <th scope="col">単価（税込）</th>
          <th scope="col">数量</th>
          <th scope="col">小計</th>
          <th scope="col">製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %>
            </td>
            <td>
               <%= form_with(model: order_detail, url: admin_order_details_update_path, method: :patch, local: true) do |f| %>
                <%= f.select :maiking_status, [["着手不可", 0], ["製作待ち", 1], ["製作中", 2], ["製作完了", 3]] ,selected: order_detail.order_id_before_type_cast %>
                <%= f.hidden_field :id, :value => order_detail.id %>
                <%= f.hidden_field :order_id, :value => @order.id %>
                <%= f.submit "更新",class:"btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-5">
    <table class="table">
      <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @sum %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @sum + @order.postage %></td>
          </tr>
      </tbody>
    </table>
  </div>